{#
/**
 * @file
 * Cleaned template for Helfi Chart media type.
 *
 * This template is used when a Helfi chart media item viewed via media library.
 */
#}
{%
  set classes = [
    'media-library-item__preview-wrapper',
    'helfi-chart',
  ]
%}
<article{{ attributes.addClass(classes) }}>
  {% if content %}
    <div{{ preview_attributes.addClass('media-library-item__preview js-media-library-item-preview') }}>
      {{ content|without('name', 'field_helfi_chart_title', 'field_helfi_chart_transcript') }}
    </div>
    {% if not status %}
      <div class="media-library-item__status">{{ "unpublished" | t }}</div>
    {% endif %}
    <div{{ metadata_attributes.addClass('media-library-item__attributes') }}>
      <div class="media-library-item__name">
        {{ name }}
      </div>
    </div>
  {% endif %}
</article>
